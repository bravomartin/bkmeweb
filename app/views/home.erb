<%= erb :_header %>
<article id="home">
	<section id="top">
	<div id="welcome">
		<div class="wrap">
		<span>
			BKME.ORG is a platform that channels the power of cyclists to reclaim bikelanes from vehicles.
			<br />
			<a href="/join">Join la Veloluci√≥n!</a>
		</span>
		</div>
	</div>
	<div id="map" class="home" zoom="15" query="data/all" url="<%=url_for "/", :full %>"></div>
	</section>
	<section id="legend"><span class="ticket icon"></span>parking tickets in bikelanes<span class="get icon"></span>#BKME gets</section>
	
	
	<section id="gets">
		<h3>Last GETS </h3>
		<ul>
		<%@gets.each do |get|%>
			<li>
				<a class="get" href="/get/<%=get["tweet_id"]%>">
					<!-- <img class="map lazy" data-original="http://maps.googleapis.com/maps/api/staticmap?zoom=18&size=220x160&markers=icon:http://bkme.org/images/marker-06.png%7C<%=get["geolocation"]%>&sensor=true" src="/images/grey.png">
								<noscript> </noscript> -->
						<img class="map" src="http://maps.googleapis.com/maps/api/staticmap?zoom=18&size=170x190&markers=icon:<%=url_for "/", :full %>images/marker_dim.png%7C<%=get["geolocation"]%>&sensor=true"/>

					<!-- <img class="photo lazy" width="170" data-original="<%="http://img.bkme.org/#{get["filename"]}"%>" src="/images/grey.png" />
						<noscript>  </noscript>-->
						<img class="photo" src="<%="http://img.bkme.org/#{get["filename"]}"%>" />
				</a>
				<a class="user" href="/user/<%=get["user_name"]%>">
					<span class="name"><%=get["user_name"]%></span>
					<span class="get"><%=@users_hash[get["user_name"]]%></span>
				</a>
				<a class="time" href="/get/<%=get["tweet_id"]%>"><%=get["created_at"].strftime("%m/%d/%Y %I:%M%p")%></a>
			</li>
		<%end%>
		</ul>
	</section>
	<section id="twitterfeed">
		<h3>Activity</h3>
		<div id="feedwrap">
		<script charset="utf-8" src="http://widgets.twimg.com/j/2/widget.js"></script>
			<script>
			new TWTR.Widget({
			version: 2,
			type: 'profile',
			rpp: 12,
			interval: 30000,
			width: 'auto',
			height: 'auto',
			theme: {
			shell: {
			  background: '#ffffff',
			  color: '#000000'
			},
			tweets: {
			  background: '#ffffff',
			  color: '#000000',
			  links: '#50c960'
			}
			},
			features: {
			scrollbar: true,
			loop: false,
			live: true,
			behavior: 'all'
			}
			}).render().setUser('bkme_ny').start();
			</script>
		</div>
		<a href="http://www.twitter.com/bkme_ny">more tweets...</a>
	</section>

	
</article>
<%= erb :_footer %>
